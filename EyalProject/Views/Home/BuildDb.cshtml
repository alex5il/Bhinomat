@{
    ViewBag.Title = "סטטיסטיקות";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
    <h2>@ViewBag.Message</h2>
</hgroup>

<table style="width: 20%">
    <thead>
        <tr>
            <th>סוג שאלה</th>
            <th>כמות</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>אמריקאית</td>
            <td>@ViewBag.NumberOfAmerican</td>
        </tr>
        <tr>
            <td>יותר מתשובה אחת</td>
            <td>@ViewBag.NumberOfMoreThanOne</td>
        </tr>
        <tr>
            <td>נכון/לא נכון</td>
            <td>@ViewBag.NumberOfTrueFalse</td>
        </tr>
        <tr>
            <td>פתוחה</td>
            <td>@ViewBag.NumberOfOpen</td>
        </tr>
        <tr>
            <td>סה"כ</td>
            <td>@ViewBag.Total</td>
        </tr>
    </tbody>

</table>